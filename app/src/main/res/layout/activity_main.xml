<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_Display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/linearLayout"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_rounded"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_"
            android:textColor="@color/black"
            android:textSize="56sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/Btn_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:text="â‹®"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:singleLine="true"
            android:text="0"
            android:textSize="56sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/Solution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="78sp"
            app:layout_constraintBottom_toTopOf="@+id/Result"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingVertical="42px"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/Btn_AC"
                style="@style/Button_3"
                android:text="AC"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Btn_Brac"
                />

            <Button
                android:id="@+id/Btn_Brac"
                style="@style/Button_2"
                android:text="( )"
                android:textSize="32sp"
                app:layout_constraintStart_toEndOf="@+id/Btn_AC"
                app:layout_constraintEnd_toStartOf="@+id/Btn_Mod" />

            <Button
                android:id="@+id/Btn_Mod"
                style="@style/Button_2"
                android:text="%"
                app:layout_constraintStart_toEndOf="@+id/Btn_Brac"
                app:layout_constraintEnd_toStartOf="@+id/Btn_Div" />

            <Button
                android:id="@+id/Btn_Div"
                style="@style/Button_2"
                android:text="/"
                app:layout_constraintStart_toEndOf="@+id/Btn_Mod"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/Btn_7"
                style="@style/Button_1"
                android:text="7" />

            <Button
                android:id="@+id/Btn_8"
                style="@style/Button_1"
                android:text="8" />

            <Button
                android:id="@+id/Btn_9"
                style="@style/Button_1"
                android:text="9" />

            <Button
                android:id="@+id/Btn_Mul"
                style="@style/Button_2"
                android:text="X" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/Btn_4"
                style="@style/Button_1"
                android:text="4" />

            <Button
                android:id="@+id/Btn_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12px"
                android:backgroundTint="@color/lightGrey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="42sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/Btn_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12px"
                android:backgroundTint="@color/lightGrey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="42sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/Btn_Sub"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12px"
                android:backgroundTint="@color/purple"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="42sp"
                app:cornerRadius="100dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/Btn_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12px"
                android:backgroundTint="@color/lightGrey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="42sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/Btn_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12px"
                android:backgroundTint="@color/lightGrey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="42sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/Btn_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12px"
                android:backgroundTint="@color/lightGrey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="42sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/Btn_Add"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12px"
                android:backgroundTint="@color/purple"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="42sp"
                app:cornerRadius="100dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/Btn_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12px"
                android:backgroundTint="@color/lightGrey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="42sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/Btn_Dot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12px"
                android:backgroundTint="@color/lightGrey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="."
                android:textColor="@color/black"
                android:textSize="42sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/Btn_C"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12px"
                android:backgroundTint="@color/lightGrey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="42sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/Btn_Eq"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12px"
                android:backgroundTint="@color/purple"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="="
                android:textColor="@color/black"
                android:textSize="42sp"
                app:cornerRadius="100dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>