<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <!-- Override default insert of 4dp  -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <!-- Button size & scaling -->
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">0.2</item>
        <item name="layout_constraintWidth_max">150dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>

        <!-- Button text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">24sp</item>
        <item name="autoSizeMinTextSize">20sp</item>
        <item name="autoSizeMaxTextSize">52sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">2sp</item>

        <!-- Button corner radius -->
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="Button_1"  parent="Button">
        <item name="android:backgroundTint">@color/lightGrey</item>
    </style>

    <style name="Button_2"  parent="Button">
        <item name="android:backgroundTint">@color/purple</item>
    </style>

    <style name="Button_3"  parent="Button">
        <item name="android:backgroundTint">@color/red</item>
    </style>

</resources>