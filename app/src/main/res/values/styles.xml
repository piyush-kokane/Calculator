<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <!-- Button size & scaling -->
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_max">150dp</item>
        <item name="layout_constraintHeight_max">150dp</item>

        <!-- Button common constraints -->
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>

        <!-- Button text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">52sp</item>
        <item name="autoSizeStepGranularity">2sp</item>

        <!-- Gap between buttons  -->
        <item name="android:insetTop">5dp</item>
        <item name="android:insetBottom">5dp</item>
        <item name="android:insetLeft">5dp</item>
        <item name="android:insetRight">5dp</item>

        <!-- Button corner radius -->
        <item name="cornerRadius">100dp</item>

        <!-- Button padding for text -->
        <item name="android:padding">15dp</item>
    </style>

    <style name="Button_1"  parent="Button">
        <item name="android:backgroundTint">@color/lightGrey</item>
    </style>

    <style name="Button_2"  parent="Button">
        <item name="android:backgroundTint">@color/purple</item>
    </style>

    <style name="Button_3"  parent="Button">
        <item name="android:backgroundTint">@color/red</item>
    </style>

</resources>