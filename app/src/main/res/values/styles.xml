<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_margin">12px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">42sp</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="Button_1"  parent="Button">
        <item name="android:backgroundTint">@color/lightGrey</item>
    </style>

    <style name="Button_2"  parent="Button">
        <item name="android:backgroundTint">@color/purple</item>
    </style>

    <style name="Button_3"  parent="Button">
        <item name="android:backgroundTint">@color/red</item>
    </style>

</resources>